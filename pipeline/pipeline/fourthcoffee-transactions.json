{
	"name": "fourthcoffee-transactions",
	"properties": {
		"activities": [
			{
				"name": "Copy FourthCoffee Transactions",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 3,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "FileSystemSource",
						"recursive": true
					},
					"sink": {
						"type": "AzureBlobFSSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "FourthCoffeeFileShareTransactions",
						"type": "DatasetReference",
						"parameters": {
							"updatedDate": {
								"value": "@pipeline().parameters.updatedDate",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "southridge_7_adls",
						"type": "DatasetReference",
						"parameters": {
							"filename": {
								"value": "@pipeline().parameters.filename",
								"type": "Expression"
							},
							"filepath": {
								"value": "@concat(pipeline().parameters.filepath,'/',pipeline().parameters.updatedDate)",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"filepath": {
				"type": "String",
				"defaultValue": "southridge/fourthcoffee/rentals"
			},
			"filename": {
				"type": "String",
				"defaultValue": "transactions.csv"
			},
			"updatedDate": {
				"type": "String"
			}
		},
		"folder": {
			"name": "FourthCoffee"
		}
	}
}