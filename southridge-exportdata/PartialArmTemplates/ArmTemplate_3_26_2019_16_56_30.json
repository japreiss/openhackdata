{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "southridge-exportdata"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Copy OnPremRentals Data')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy Actors",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "actors.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					},
					{
						"name": "Copy Customers",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "customers.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					},
					{
						"name": "Copy MovieActors",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "movieactors.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					},
					{
						"name": "Copy Movies",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "movies.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					},
					{
						"name": "Copy OnlineMovieMappings",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "onlinemoviemappings.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					},
					{
						"name": "Copy Transactions",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "SqlSource"
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "Transactions",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": "transactions.csv",
									"filepath": "vanarsdelltd/onpremrentals"
								}
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/Transactions')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/fourthcoffee-actors')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy FourthCoffee Actors",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 3,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "FileSystemSource",
								"recursive": true
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "FourthCoffeeFileShareActors",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_7_adls",
								"type": "DatasetReference",
								"parameters": {
									"filename": {
										"value": "@pipeline().parameters.filename",
										"type": "Expression"
									},
									"filepath": {
										"value": "@pipeline().parameters.filepath",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"filepath": {
						"type": "String",
						"defaultValue": "fourthcoffee"
					},
					"filename": {
						"type": "String",
						"defaultValue": "actors.csv"
					}
				},
				"folder": {
					"name": "FourthCoffee"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/FourthCoffeeFileShareActors')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureDataLakeStorageFile1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_7_adls",
					"type": "LinkedServiceReference"
				},
				"type": "AzureBlobFSFile",
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"nullValue": "\\N",
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": false
					},
					"fileName": "",
					"folderPath": ""
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/FourthCoffeeFileShareActors')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "linkedService1",
					"type": "LinkedServiceReference"
				},
				"type": "FileShare",
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"nullValue": "\\N",
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": false
					},
					"fileName": "Actors.csv",
					"folderPath": ""
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/Transactions')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "VanArsdelLtdOnPrem",
					"type": "LinkedServiceReference"
				},
				"type": "SqlServerTable",
				"typeProperties": {
					"tableName": "[concat('[', 'dbo].[Transactions]')]"
				}
			}
		}
	]
}